# Docker Hub image
DOCKER_IMAGE=nathankimgon/subsidytracker-api:latest

# Domain for Caddy SSL
DOMAIN=api.bojogeum.co.kr

# PostgreSQL
POSTGRES_DB=subsidytracker
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-to-secure-password

# Connection string (used by API and Collector)
ConnectionStrings__DefaultConnection=Host=postgres;Port=5432;Database=subsidytracker;Username=postgres;Password=change-me-to-secure-password

# API Keys
PublicDataPortal__ApiKey=YOUR_PUBLIC_DATA_API_KEY
YouthCenter__ApiKey=YOUR_YOUTH_CENTER_API_KEY
